{
  "$schema": "tooling/node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/build/**",
      "**/target/**",
      "**/dist/**",
      "**/.next/**",
      "**/.cargo/**"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
